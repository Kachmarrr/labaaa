print("1 = перевести в шифр")

ukr = "абвгґдеєжзиіїйклмнопрстуфхцчшщьюя"
choice = int(input( "ведіть дію: " ))

while True:
        if choice == 1 :
            word = input("ведіть слово: ")
            key = int(input("ведіть кількість додавань: "))
            word_low = word.lower()
            chif = ""
            for letter in word_low :
                     position = ukr.find (letter)
                     new_position = position + key
                     if letter in ukr:
                        chif = chif + ukr[new_position]
                     else:
                        chif = chif + letter
            print(chif)
